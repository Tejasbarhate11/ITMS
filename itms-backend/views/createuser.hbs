{{> navbar}}
<div class="container-fluid" >
    <div class="col-md-4 mx-auto mt-5 shadow p-5" style="border-radius: 15px;">
        <div>
            <h2><a href="/dashboard/users"><span class="material-icons pb-1">arrow_back</span></a> Create user</h2>
        </div>
        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                {{message}}
            </div>
        {{/if}}
        <form name="user" class="mt-3" onsubmit="return validateData()" method="POST" action="/dashboard/users/create" >
            <div class="form-group">
                <label for="nameInput">Name:</label>
                <input name="name" type="text" class="form-control" id="nameInput" autofocus autocomplete="off" >
            </div>
            <div class="form-group">
                <label for="emailInput">Email:</label>
                <input name="email" type="email" class="form-control" id="emailInput" autocomplete="off">
            </div>
            <div class="form-group">
                <label for="mobileNoInput">Mobile no:</label>
                <input name="mobile_no" type="tel" class="form-control" id="mobileNoInput" autocomplete="off">
            </div>
            <div class="form-group" style="margin-top: 40px" >
                <button type="submit" class="btn btn-primary btn-block" style="border-radius: 15px;">Create user</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/createuser.js"></script>
