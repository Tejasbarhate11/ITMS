{{> navbar }}

<div class="container-fluid text-center mt-2">    
  <div class="row content">


    <div class="col-md-3 mb-2 pr-0">

      <div>
        <button class="tab tablinks" onclick="showTab(event, 'profile')" id="defaultOpen">Profile</button>
        <button class="tab tablinks" onclick="showTab(event, 'reset')">Reset password</button>
      </div>
      
    </div>


    <div class="col-md-9 px-0">
      <div class="container-fluid">
        <div id="profile" class="tabcontent text-left">
          <div class="jumbotron jumbotron-fluid">
            <div class="container-fluid">
              <h1 class="display-4">Profile</h1>
            </div>
          </div>
          {{> updateProfile}}
        </div>
        <div id="reset" class="tabcontent text-left">
          <div class="jumbotron jumbotron-fluid">
            <div class="container-fluid">
              <h1 class="display-4">Reset password</h1>
            </div>
          </div>
          {{> resetPassword}}
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/profile.js"></script>
