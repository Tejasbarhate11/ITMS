{{> header}}
<div class="container-fluid p-4">
    <h1><span id="closebtn" class="material-icons pb-2">close</span> Create test</h1>
    <div class="form-group">
        <label for="titleInput">Title:</label>
        <input name="title" type="text" class="form-control" id="titleInput" autofocus autocomplete="off" >
    </div>
    <div class="form-group">
        <label for="instructionsInput">Instructions:</label>
        <input name="instructions" class="form-control" id="instructionsInput" type="hidden" style="width: 100%;">
        <div id="editor-container">
        </div>
    </div>
